                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="床頭燈"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="8dp">

                </TextView>
                <ImageButton
